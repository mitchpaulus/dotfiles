#!/usr/bin/env mshell

args (dup "-h" = swap "--help" = or) any ("tsv2xlsx [input.tsv]\noutput.xlsx if data piped in.\n" w 0 exit) iff

args len 0 > if
    args :0: tsvfile!
    $"{@tsvfile stem}.xlsx" output!
    [xlwrite -a block A1 @tsvfile @output];
else
    [xlwrite -a block A1 "-" "output.xlsx"];
end
