#!/usr/bin/env mshell
'
from PIL import Image
import pillow_heif
import sys

# Register HEIF opener
pillow_heif.register_heif_opener()
img = Image.open(sys.argv[1])
img.save(sys.argv[2], "JPEG")
' py!

args len 2 <
($1 stem str ".jpg" +)
($2)
iff
outputFile!

[uv run --with pillow-heif '-' $1 @outputFile] @py < !
