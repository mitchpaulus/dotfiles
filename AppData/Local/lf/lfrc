# Windows specific lfrc
set shell msh.exe
set shellflag -c

set hidden true
set sixel
map <esc> quit

# Unmap single y
map y

map <f-5> reload
map <c-v> page-down
map <a-v> page-up

map yy copy
map yc copy-command-path
map yf copy-filename
map yp copy-fullpath

map w & ['explorer.exe' '.'];

# Remap 'f' key. Never really use the find functionality.
map f mark-load
map ; mark-load

map <f-2> rename

# The 1:-1 removes the outer quotes
cmd copy-command-path & [CCLLCCopyToClip.exe $f];
cmd copy-fullpath & [clip.exe] $f < ;
cmd copy-filename & [clip.exe] $f basename str < ;

cmd on-cd $ wt_cwd

map <f-2> rename

set previewer lf-preview-win.exe

cmd open & ['cmd.exe' '/C' 'start' 'Window Title' $f ];

map e $ [$EDITOR $f]!

map gd cd_dotfiles
cmd cd_dotfiles ${{
    ['lf' '-remote' $"send {$id} cd '{$DOTFILES}'"];
}}
