# Windows specific lfrc
set shell msh.exe
set shellflag -c

set hidden true
set sixel
map <esc> quit

# Unmap single y
map y

map <f-5> reload
map <c-v> page-down
map <a-v> page-up

map yy copy
map yc copy-command-path
map yf copy-filename
map yp copy-fullpath

# Remap 'f' key. Never really use the find functionality.
map f mark-load
map ; mark-load

map <f-2> rename

# The 1:-1 removes the outer quotes
cmd copy-command-path & [CCLLCCopyToClip.exe $f 1:-1];
cmd copy-fullpath & [clip.exe] $f 1:-1 < ;
cmd copy-filename & [clip.exe] $f 1:-1 basename < ;

cmd on-cd $ wt_cwd

map <f-2> rename

set previewer lf-preview-win.exe

map e $ [$EDITOR $f]!

map gd cd_dotfiles
cmd cd_dotfiles ${{
    lf_send_dotfiles.msh
}}
